n=int(input("enter:"))
for i in range(1,2*n):
    if i==1:
        print("*"*n+" "*(n-2)+"*")
    elif i>1 and i<n:
        print(" "*(n-1)+"*"+" "*(n-2)+"*")
    elif i==n:
        print("*"*(2*n-1))
    elif i>n and i!=2*n-1:
        print("*"+" "*(n-2)+"*")
    else:
        print("*"+" "*(n-2)+"*"*n)
