n=int(input("enter no. of rows:"))

for i in range(1,n+1):
    
    if i==(int(n/2)+1):
        print("*"*int(n/2),end="")
        print("*"*(n-int(n/2)))
        
    elif i<(int(n/2)+1):
        
            print(" "*int(n/2),end="")
            print("*"*i)
            
    elif i>(int(n/2)+1):
        
            print(" "*int(n/2),end="")
            print("*"*((n+1)-i))
